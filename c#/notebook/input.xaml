<Window x:Class="notebook.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notebook"
        mc:Ignorable="d"
        Title="确认对话框" Height="100" Width="300">
    <Grid>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="请输入内容" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="cancel" Content="取消" HorizontalAlignment="Left" Margin="207,40,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="confirm" Content="确定" HorizontalAlignment="Left" Margin="127,40,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
