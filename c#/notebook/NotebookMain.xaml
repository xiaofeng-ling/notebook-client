<Window x:Class="notebook.NoteBookMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notebook"
        mc:Ignorable="d"
        Title="NoteBookMain" Height="450" Width="200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="390" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ListBox  x:Name="notebookMainList" Grid.Row="0" Margin="5,5,5,5" />
        <Button Content="+" x:Name="add" Width="18" Height="18" Grid.Row="1" Margin="0,0,28,12" HorizontalAlignment="Right" />
        <Button Content="-" x:Name="del" Width="18" Height="18" Grid.Row="1" Margin="0,0,5,12" HorizontalAlignment="Right"/>

    </Grid>
</Window>
